#!/usr/bin/perl
use strict;
use warnings;

my $host = `n9`;
chomp $host;
my $src = "/home/user/MyDocs/DCIM";
my $dest = "$ENV{HOME}/Code/n9/DCIM";

sub run(@){
  print "@_\n";
  system @_;
  die "failed" if $? != 0;
}

run 'rsync', "-avP", "root\@$host:$src/", $dest;
run 'rsync', "-avP", "root\@$host:/home/user/Pictures", $dest;

